<Page
    x:Class="bitmap_to_pixel.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:bitmap_to_pixel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:Name="ImagePreview" Margin="20,20,20,120" />
        <Button Content="Select image" HorizontalAlignment="Left" Margin="20,0,0,80" VerticalAlignment="Bottom" Width="110" Click="SetImportPath" />
        <Button x:Name="StartButton" Content="Export" HorizontalAlignment="Left" Margin="20,0,0,40" VerticalAlignment="Bottom" Width="110" Click="SetExportPath" IsEnabled="False" />
        <TextBlock x:Name="ImportPath" Margin="150,0,20,85" Height="20" VerticalAlignment="Bottom"/>
        <Grid Margin="0,0,0,0" Height="25" VerticalAlignment="Bottom" Background="#FFCFCFCF">
            <TextBlock x:Name="Status" Margin="20,5,5,5" FontFamily="Consolas" FontSize="11" />
        </Grid>
    </Grid>
</Page>
